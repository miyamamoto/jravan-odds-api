# 環境設定
# development: 開発環境（モックデータ使用）
# production: 本番環境（JRA-VAN使用）
ENVIRONMENT=development

# JRA-VAN設定
JRAVAN_SERVICE_KEY=UNKNOWN

# API設定
API_HOST=0.0.0.0
API_PORT=8000

# CORS設定（複数の場合はカンマ区切り）
CORS_ORIGINS=*

# データキャッシュ設定
ENABLE_CACHE=true
CACHE_DIR=./cache
CACHE_TTL=60

# データ保存設定
ENABLE_DATA_SAVE=true
DATA_DIR=./data

# WebSocket設定
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# リアルタイム更新間隔（秒）
REALTIME_UPDATE_INTERVAL=10

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=jravan_api.log

# モックデータファイル
MOCK_DATA_FILE=./mock_data/sample_odds.json
